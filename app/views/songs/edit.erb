<%= form_for @song do |f| %>
  <%= f.label "Title:" %>
  <%= f.text_field :title %><br>
  <%= f.label "Released:" %>
  <%= f.check_box :released %><br>
  <%= f.label "Release Year:" %>
  <%= f.number_field :release_year %><br>
  <%= f.label "Artist Name:" %>
  <%= f.text_field :artist_name %><br>
  <%= f.label "Genre:" %>
  <%= f.text_field :genre %><br>
  <%= f.submit "Update Song" %>
<% end %>
<%= link_to "Delete", @song, method: :delete %>

<% if @song.errors.any? %>
  <p>Errors:</p>
  <ul>
    <% @song.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
